@model Cart

@if (Model == null)
{
    <div class="row">
        <h2>Корзина пустая!</h2>
        <a class="btn btn-dark" href="/home/index" target="_blank">На главную</a>
    </div>
}
else 
{
    <div class="row">
        @foreach (var item in Model.Position)
        {
            <div class="col-3 card shadow">
                <div class="card-body">
                     <a style="color:black" href="/product/Index/@item.Product.Id">
                     <h5>@item.Product.Name</h5>
                     </a>
                    <img style="column-fill" width="200" src="@item.Product.ImagePath" alt="@item.Product.ImagePath" />
                    <h5>Цена: @item.Product.Price</h5>
                    <h5>Количество: @item.Quantity</h5>
                    <a class="btn btn-danger" href="/cart/remove?productId=@item.Product.Id" role="button">-</a>
                    <a class="btn btn-dark" href="/cart/add?productId=@item.Product.Id" role="button">+</a>
                    <h5>Стоимость позиции: @item.Price</h5>
                    <a class="btn btn-danger" href="/cart/remove?productId=@item.Product.Id" role="button">Удалить позицию</a>
                </div>
            </div>
        }
    </div>
    <div class="row">
        <div class="col-6">
            <h5>Стоимость: @Model.price</h5>
            <a class="btn btn-dark" href="/home/index" role="button">На главную</a>
            <a class="btn btn-success" href="/cart/checkout" role="button">Оформить заказ</a>
        </div>
    </div>
}
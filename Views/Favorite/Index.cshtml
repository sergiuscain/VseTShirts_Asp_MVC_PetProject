@model List<ProductViewModel>

    @if (Model != null && Model.Count > 0)
{
    <div class="row">
        @foreach (var product in Model)
        {
           <img class="card-img-top" src="@product.ImagePath" alt="изображение товара" />
            <div class="card-body">
                <a style="color:black"
                   asp-area=""
                   asp-controller="Product"
                   asp-action="Index"
                   asp-route-id="@product.Id">
                   <h5>@product.Name</h5>
                </a>
                <h5>@product.Cost</h5>
                <a style="color:black"
                 asp-area=""
                 asp-controller="Cart"
                 asp-action="Add"
                 asp-route-id="@product.Id"
                role="button">
                 <h5>Добавить в корзину</h5>
                </a>

                <a style="color:black"
                asp-area=""
                asp-controller="Favorite"
                asp-action="Remove"
                asp-route-id="@product.Id">
                <h5>Удалить из избранного</h5>
                </a>
            </div>
        }
    </div>
}
else
{
    <h3> Список избранного пуст..</h3>
}
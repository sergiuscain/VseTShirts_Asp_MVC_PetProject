@model Product

<div class="row">
    <div class="col-6">
        <img class="card-img-top" src="@Model.ImagePath" alt="Не грузит картинку почему-то" />
    </div>
    <div class="col-6 card shadow">
        <div class="card-body">
            <h5>@Model.Name</h5>
            <h5>@Model.Price</h5>
            <a class="btn btn-dark" href="/home/index" role="button">Продолжить покупки</a>
            <a class="btn btn-dark" href="/cart/add?productId=@Model.Id" role="button">Добавить в корзину</a>
            <h5>@Model.Description</h5>
        </div>
    </div>
